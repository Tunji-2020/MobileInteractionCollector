<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskslist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ImageTagged" >

    <Button
        android:id="@+id/btn_task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="26dp"
        android:text="Task 01" />

    <Button
        android:id="@+id/btn_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_task1"
        android:layout_alignBottom="@+id/btn_task1"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/btn_task1"
        android:text="Task 02" />

    <Button
        android:id="@+id/btn_task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_task1"
        android:layout_below="@+id/btn_task1"
        android:layout_marginTop="24dp"
        android:text="Task 03" />

    <Button
        android:id="@+id/btn_task4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_task3"
        android:layout_alignBottom="@+id/btn_task3"
        android:layout_alignLeft="@+id/btn_task2"
        android:text="Task 04" />

    <Button
        android:id="@+id/btn_task5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_task3"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/btn_task2"
        android:text="Task 05" />

    <Button
        android:id="@+id/btn_task6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_task5"
        android:layout_alignRight="@+id/btn_task4"
        android:text="Task 06" />

    <Button
        android:id="@+id/btn_task7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_task5"
        android:layout_below="@+id/btn_task5"
        android:layout_marginTop="27dp"
        android:text="Task 07" />

    <Button
        android:id="@+id/btn_task8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_task7"
        android:layout_alignLeft="@+id/btn_task6"
        android:text="Task 08" />

    <Button
        android:id="@+id/btn_task9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_task7"
        android:layout_below="@+id/btn_task7"
        android:layout_marginTop="30dp"
        android:text="Task 09" />

    <Button
        android:id="@+id/btn_task10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_task9"
        android:layout_alignBottom="@+id/btn_task9"
        android:layout_alignLeft="@+id/btn_task8"
        android:text="Task 10" />

</RelativeLayout>
